      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-8 border-t border-slate-200 relative bg-white/80 backdrop-blur-sm">
    <div class="max-w-6xl mx-auto px-6 text-center text-slate-500">
      <p class="reveal-element">&copy; {new Date().getFullYear()} Gene Sigalov. All rights reserved.</p>
    </div>
  </footer>
</Layout>

<style>
  /* Custom cursor styles */
  @media (hover: hover) and (pointer: fine) {
    #cursor { display: block; }
  }
  @media (hover: none) or (pointer: coarse) {
    #cursor { display: none; }
  }

  #cursor-ring.expanded {
    width: 60px;
    height: 60px;
    border-color: rgba(71, 85, 105, 0.5);
    background: rgba(71, 85, 105, 0.1);
  }

  /* Morphing blobs */
  .blob {
    background: linear-gradient(135deg, #60a5fa 0%, #a78bfa 50%, #f472b6 100%);
    border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
    filter: blur(60px);
    animation: morph 15s ease-in-out infinite;
  }

  .blob-1 { animation-delay: 0s; }
  .blob-2 {
    animation-delay: -5s;
    animation-direction: reverse;
  }
  .blob-3 { animation-delay: -10s; }

  @keyframes morph {
    0%, 100% {
      border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
      transform: rotate(0deg) scale(1);
    }
    25% {
      border-radius: 70% 30% 50% 50% / 30% 30% 70% 70%;
      transform: rotate(90deg) scale(1.1);

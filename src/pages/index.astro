---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Gene Sigalov - Entrepreneur, Attorney & Technologist">
  <!-- Custom Cursor -->
  <div id="cursor" class="fixed pointer-events-none z-[9999]">
    <div id="cursor-dot" class="w-2 h-2 bg-slate-800 rounded-full absolute -translate-x-1/2 -translate-y-1/2 transition-transform duration-100"></div>
    <div id="cursor-ring" class="w-10 h-10 border-2 border-slate-600 rounded-full absolute -translate-x-1/2 -translate-y-1/2 transition-all duration-300 ease-out"></div>
  </div>

  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-md border-b border-slate-200 shadow-sm">
    <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
      <a href="#" class="text-xl font-bold gradient-text magnetic-btn" data-magnetic>GS</a>
      <div class="hidden md:flex gap-8">
        <a href="#about" class="text-slate-600 hover:text-sky-600 transition-colors nav-link font-medium" data-magnetic>About</a>
        <a href="#ventures" class="text-slate-600 hover:text-sky-600 transition-colors nav-link font-medium" data-magnetic>Ventures</a>
        <a href="#legal" class="text-slate-600 hover:text-sky-600 transition-colors nav-link font-medium" data-magnetic>Legal</a>
        <a href="#contact" class="text-slate-600 hover:text-sky-600 transition-colors nav-link font-medium" data-magnetic>Contact</a>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center relative overflow-hidden pt-20 hero-bg">
    <!-- Semi-transparent overlay for text readability -->
    <div class="absolute inset-0 bg-gradient-to-b from-white/40 via-white/20 to-white/60"></div>

    <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
      <!-- Profile Photo with enhanced glow -->
      <div class="mb-8 flex justify-center hero-element" data-delay="0">
        <div class="relative group photo-container">
          <!-- Animated glow ring -->
          <div class="absolute -inset-4 rounded-full animate-spin-slow opacity-0 group-hover:opacity-100 transition-opacity duration-500">
            <div class="absolute inset-0 bg-gradient-conic from-sky-400 via-blue-500 via-indigo-500 via-blue-500 to-sky-400 rounded-full blur-xl"></div>
          </div>
          <!-- Primary glow -->
          <div class="absolute -inset-1 bg-gradient-to-r from-sky-400 via-blue-500 to-indigo-500 rounded-full blur-lg opacity-75 group-hover:opacity-100 transition duration-500 animate-pulse-slow"></div>
          <!-- Photo container -->
          <div class="relative w-40 h-40 md:w-48 md:h-48 rounded-full overflow-hidden ring-4 ring-white shadow-2xl photo-inner">
            <img
              src="/gene-sigalov.jpg"
              alt="Gene Sigalov"
              class="w-full h-full object-cover brightness-110 contrast-105 saturate-90 transition-transform duration-700 group-hover:scale-110"
              style="filter: brightness(1.1) contrast(1.05) saturate(0.9) sepia(0.05);"
            />
            <div class="absolute inset-0 bg-gradient-to-tr from-sky-500/10 via-transparent to-blue-500/10"></div>
          </div>
        </div>
      </div>

      <div class="mb-6 hero-element" data-delay="0.1">
        <span class="inline-block px-4 py-2 bg-white/80 rounded-full text-sm text-slate-700 border border-slate-200 backdrop-blur-sm shadow-sm">
          <span class="inline-block w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></span>
          Fort Lauderdale, Florida
        </span>
      </div>

      <!-- Animated name with text reveal -->
      <h1 class="text-5xl md:text-7xl font-bold mb-6 hero-element overflow-hidden pb-2" data-delay="0.2">
        <span class="gradient-text inline-block name-reveal">Gene Sigalov</span>
      </h1>

      <!-- Typewriter tagline -->
      <p class="text-xl md:text-2xl text-slate-700 mb-8 max-w-2xl mx-auto hero-element" data-delay="0.3">
        <span id="typewriter" class="typewriter-text"></span>
        <span class="typewriter-cursor text-sky-600">|</span>
      </p>

      <div class="flex flex-wrap gap-4 justify-center hero-element" data-delay="0.4">
        <a href="#ventures" class="btn-primary magnetic-btn group" data-magnetic>
          <svg class="w-5 h-5 transition-transform group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <span>View Ventures</span>
          <div class="btn-shine"></div>
        </a>
        <a href="https://linkedin.com/in/sigalov" target="_blank" class="inline-flex items-center gap-2 px-6 py-3 bg-white/90 text-slate-700 rounded-full font-medium hover:bg-white transition-all duration-300 border border-slate-200 shadow-sm magnetic-btn group" data-magnetic>
          <svg class="w-5 h-5 transition-transform group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          LinkedIn
        </a>
      </div>

      <!-- Scroll indicator -->
      <div class="absolute bottom-10 left-1/2 -translate-x-1/2 hero-element" data-delay="0.6">
        <div class="scroll-indicator">
          <div class="mouse">
            <div class="wheel"></div>
          </div>
          <div class="arrow-scroll">
            <span></span>
            <span></span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-24 relative overflow-hidden">
    <!-- Section background -->
    <div class="absolute inset-0 bg-white/70 backdrop-blur-sm"></div>
    <!-- Section background accent -->
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-sky-500/50 to-transparent"></div>

    <div class="max-w-6xl mx-auto px-6 relative">
      <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center reveal-element text-slate-800">
        About <span class="gradient-text scramble-text" data-text="Gene">Gene</span>
      </h2>
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="space-y-6">
          <p class="text-lg text-slate-700 leading-relaxed reveal-element" data-delay="0.1">
            Gene Sigalov co-founded SimpleTexting, a business SMS platform that grew to 17,000+ customers including Starbucks, DHL, and FedEx. He scaled the company to $20M ARR as CEO before its acquisition by Sinch in 2021.
          </p>
          <p class="text-lg text-slate-700 leading-relaxed reveal-element" data-delay="0.2">
            Now he's building Upfirst.ai, an AI-powered answering service that helps small businesses never miss a call. With a background in computer science and law (B.S., J.D.), he's focused on creating technology that solves real problems for business owners.
          </p>
        </div>

        <!-- Bento Grid Stats -->
        <div class="grid grid-cols-2 gap-4 bento-grid">
          <div class="card text-center reveal-element stat-card group" data-delay="0.1">
            <div class="text-4xl font-bold text-slate-800 mb-2">
              <span class="counter" data-target="17000" data-suffix="+">0</span>
            </div>
            <div class="text-slate-600 group-hover:text-slate-800 transition-colors">Customers</div>
            <div class="card-glow"></div>
          </div>
          <div class="card text-center reveal-element stat-card group" data-delay="0.2">
            <div class="text-4xl font-bold text-slate-800 mb-2">
              $<span class="counter" data-target="20" data-suffix="M">0</span>
            </div>
            <div class="text-slate-600 group-hover:text-slate-800 transition-colors">ARR at Exit</div>
            <div class="card-glow"></div>
          </div>
          <div class="card text-center reveal-element stat-card group" data-delay="0.3">
            <div class="text-4xl font-bold text-slate-800 mb-2">
              <span class="counter" data-target="2" data-suffix="">0</span>
            </div>
            <div class="text-slate-600 group-hover:text-slate-800 transition-colors">Companies Built</div>
            <div class="card-glow"></div>
          </div>
          <div class="card text-center reveal-element stat-card group" data-delay="0.4">
            <div class="text-4xl font-bold text-slate-800 mb-2">
              <span class="counter" data-target="1" data-suffix="">0</span>
            </div>
            <div class="text-slate-600 group-hover:text-slate-800 transition-colors">Successful Exit</div>
            <div class="card-glow"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Ventures Section -->
  <section id="ventures" class="py-24 relative overflow-hidden">
    <!-- Section background -->
    <div class="absolute inset-0 bg-slate-100/80 backdrop-blur-sm"></div>

    <div class="max-w-6xl mx-auto px-6 relative">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-center reveal-element text-slate-800">
        <span class="gradient-text scramble-text" data-text="Ventures">Ventures</span>
      </h2>
      <p class="text-slate-600 text-center mb-12 max-w-2xl mx-auto reveal-element" data-delay="0.1">
        Building technology that actually works for small businesses
      </p>

      <div class="space-y-8">
        <!-- Upfirst -->
        <div class="card group hover:scale-[1.01] transition-all duration-500 reveal-element venture-card" data-delay="0.2">
          <div class="flex flex-col md:flex-row md:items-center gap-6">
            <div class="flex-shrink-0">
              <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl flex items-center justify-center text-2xl font-bold text-white shadow-lg shadow-green-500/25 group-hover:shadow-green-500/40 transition-shadow">
                U
              </div>
            </div>
            <div class="flex-grow">
              <div class="flex flex-wrap items-center gap-3 mb-2">
                <h3 class="text-2xl font-bold text-slate-800">Upfirst.ai</h3>
                <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium animate-pulse">Current</span>
                <span class="px-3 py-1 bg-slate-100 text-slate-600 rounded-full text-sm">Co-founder & CEO</span>
              </div>
              <p class="text-slate-600 mb-4">
                AI-powered voice receptionist for small businesses. Answers calls 24/7 with human-like AI voices, takes messages, answers FAQs, and books appointments. Born from the frustration of missing client calls while running a law practice.
              </p>
              <a href="https://upfirst.ai" target="_blank" class="text-sky-600 hover:text-sky-700 inline-flex items-center gap-2 group/link magnetic-btn font-medium" data-magnetic>
                <span>Visit upfirst.ai</span>
                <svg class="w-4 h-4 transition-transform group-hover/link:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
            </div>
          </div>
          <div class="venture-shine"></div>
        </div>

        <!-- SimpleTexting -->
        <div class="card group hover:scale-[1.01] transition-all duration-500 reveal-element venture-card" data-delay="0.3">
          <div class="flex flex-col md:flex-row md:items-center gap-6">
            <div class="flex-shrink-0">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center text-2xl font-bold text-white shadow-lg shadow-blue-500/25 group-hover:shadow-blue-500/40 transition-shadow">
                ST
              </div>
            </div>
            <div class="flex-grow">
              <div class="flex flex-wrap items-center gap-3 mb-2">
                <h3 class="text-2xl font-bold text-slate-800">SimpleTexting</h3>
                <span class="px-3 py-1 bg-purple-100 text-purple-700 rounded-full text-sm font-medium">Acquired by Sinch (2021)</span>
                <span class="px-3 py-1 bg-slate-100 text-slate-600 rounded-full text-sm">Co-founder & CEO</span>
              </div>
              <p class="text-slate-600 mb-4">
                Business texting platform that grew to 17,000+ users including Fortune 500 companies like Starbucks, DHL, and FedEx. Scaled to $20M in annualized revenue as CEO before being acquired by Sinch in 2021.
              </p>
              <a href="https://simpletexting.com" target="_blank" class="text-sky-600 hover:text-sky-700 inline-flex items-center gap-2 group/link magnetic-btn font-medium" data-magnetic>
                <span>Visit simpletexting.com</span>
                <svg class="w-4 h-4 transition-transform group-hover/link:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
            </div>
          </div>
          <div class="venture-shine"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Legal Section -->
  <section id="legal" class="py-24 relative">
    <!-- Section background -->
    <div class="absolute inset-0 bg-white/70 backdrop-blur-sm"></div>

    <div class="max-w-6xl mx-auto px-6 relative">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-center reveal-element text-slate-800">
        Legal <span class="gradient-text scramble-text" data-text="Practice">Practice</span>
      </h2>
      <p class="text-slate-600 text-center mb-12 max-w-2xl mx-auto reveal-element" data-delay="0.1">
        Bridging technology and law with a unique dual expertise
      </p>

      <div class="card max-w-4xl mx-auto reveal-element legal-card" data-delay="0.2">
        <div class="flex flex-col md:flex-row md:items-start gap-6">
          <div class="flex-shrink-0">
            <div class="w-16 h-16 bg-gradient-to-br from-amber-500 to-orange-600 rounded-2xl flex items-center justify-center text-2xl font-bold text-white shadow-lg shadow-amber-500/25">
              SF
            </div>
          </div>
          <div class="flex-grow">
            <h3 class="text-2xl font-bold mb-4 text-slate-800">The Sigalov Firm, PLLC</h3>
            <p class="text-slate-600 mb-6">
              Founded in 2009, The Sigalov Firm is a boutique law practice specializing in No-Fault insurance law for healthcare providers. The firm has resolved over 16,000 cases before the American Arbitration Association.
            </p>

            <div class="grid md:grid-cols-2 gap-6 mb-6">
              <div>
                <h4 class="font-semibold mb-3 text-slate-700">Bar Admissions</h4>
                <ul class="space-y-2 text-slate-600">
                  <li class="flex items-center gap-2 bar-item">
                    <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    New York State Bar
                  </li>
                  <li class="flex items-center gap-2 bar-item">
                    <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    New Jersey State Bar
                  </li>
                  <li class="flex items-center gap-2 bar-item">
                    <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    Florida State Bar
                  </li>
                  <li class="flex items-center gap-2 bar-item">
                    <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    USPTO (Patent Bar)
                  </li>
                </ul>
              </div>
              <div>
                <h4 class="font-semibold mb-3 text-slate-700">Recognition</h4>
                <ul class="space-y-2 text-slate-600">
                  <li class="flex items-center gap-2 recognition-item">
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">

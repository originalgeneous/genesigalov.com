---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Gene Sigalov - Entrepreneur, Attorney & Technologist">
  <!-- Navigation - 1940s Art Deco Style -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-cream/95 dark:bg-vintage-dark/95 backdrop-blur-lg border-b-2 border-gold shadow-md" role="navigation" aria-label="Main navigation">
    <div class="max-w-6xl mx-auto px-6 lg:px-8 h-16 flex justify-between items-center">
      <a href="#" class="font-display text-2xl font-bold text-navy dark:text-gold py-2 px-1 tracking-wider" aria-label="Gene Sigalov - Home">GS</a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#about" class="text-navy dark:text-cream hover:text-gold dark:hover:text-gold transition-colors nav-link">About</a>
        <a href="#ventures" class="text-navy dark:text-cream hover:text-gold dark:hover:text-gold transition-colors nav-link">Ventures</a>
        <a href="#legal" class="text-navy dark:text-cream hover:text-gold dark:hover:text-gold transition-colors nav-link">Legal</a>
        <a href="#contact" class="text-navy dark:text-cream hover:text-gold dark:hover:text-gold transition-colors nav-link">Contact</a>

        <!-- Dark Mode Toggle -->
        <button id="theme-toggle" class="p-3 rounded-sm border border-gold/50 hover:bg-gold/10 dark:hover:bg-gold/10 transition-colors cursor-pointer touch-target flex items-center justify-center" aria-label="Toggle dark mode">
          <svg class="w-5 h-5 hidden dark:block text-gold" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
          </svg>
          <svg class="w-5 h-5 block dark:hidden text-navy" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile Controls -->
      <div class="md:hidden flex items-center gap-2">
        <!-- Dark Mode Toggle Mobile -->
        <button id="theme-toggle-mobile" class="p-3 rounded-sm border border-gold/50 hover:bg-gold/10 transition-colors cursor-pointer touch-target flex items-center justify-center" aria-label="Toggle dark mode">
          <svg class="w-5 h-5 hidden dark:block text-gold" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
          </svg>
          <svg class="w-5 h-5 block dark:hidden text-navy" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
          </svg>
        </button>

        <!-- Hamburger Button -->
        <button id="mobile-menu-btn" class="flex flex-col gap-1.5 p-3 touch-target items-center justify-center rounded-sm hover:bg-gold/10 transition-colors" aria-label="Toggle menu" aria-expanded="false" aria-controls="mobile-menu">
          <span class="hamburger-line w-6 h-0.5 bg-navy dark:bg-cream transition-all duration-300 origin-center"></span>
          <span class="hamburger-line w-6 h-0.5 bg-navy dark:bg-cream transition-all duration-300 origin-center"></span>
          <span class="hamburger-line w-6 h-0.5 bg-navy dark:bg-cream transition-all duration-300 origin-center"></span>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation Menu -->
    <div id="mobile-menu" class="md:hidden absolute top-full left-0 right-0 bg-cream/98 dark:bg-vintage-dark/98 backdrop-blur-md border-b-2 border-gold shadow-lg mobile-menu-closed" aria-hidden="true">
      <div class="flex flex-col px-6 py-4 gap-2">
        <a href="#about" class="text-navy dark:text-cream hover:text-gold dark:hover:text-gold active:bg-gold/10 transition-all py-3 px-3 -mx-3 rounded-sm mobile-nav-link font-display text-lg uppercase tracking-wider">About</a>
        <a href="#ventures" class="text-navy dark:text-cream hover:text-gold dark:hover:text-gold active:bg-gold/10 transition-all py-3 px-3 -mx-3 rounded-sm mobile-nav-link font-display text-lg uppercase tracking-wider">Ventures</a>
        <a href="#legal" class="text-navy dark:text-cream hover:text-gold dark:hover:text-gold active:bg-gold/10 transition-all py-3 px-3 -mx-3 rounded-sm mobile-nav-link font-display text-lg uppercase tracking-wider">Legal</a>
        <a href="#contact" class="text-navy dark:text-cream hover:text-gold dark:hover:text-gold active:bg-gold/10 transition-all py-3 px-3 -mx-3 rounded-sm mobile-nav-link font-display text-lg uppercase tracking-wider">Contact</a>
      </div>
    </div>
  </nav>

  <!-- Hero Section - 1940s Vintage Style -->
  <section class="min-h-screen flex items-center justify-center relative overflow-hidden pt-24 pb-20 hero-bg grain-overlay" aria-label="Introduction">
    <!-- Sepia-tinted overlay for vintage feel -->
    <div class="absolute inset-0 bg-gradient-to-b from-cream/70 via-cream/50 to-cream/80 dark:from-vintage-dark/80 dark:via-vintage-dark/60 dark:to-vintage-dark/90 z-[2]"></div>

    <div class="relative z-10 max-w-4xl mx-auto px-6 lg:px-8 text-center">
      <!-- Profile Photo with vintage treatment -->
      <div class="mb-10 flex justify-center hero-element sunburst" data-delay="0">
        <div class="relative group">
          <!-- Art Deco frame -->
          <div class="absolute -inset-4 border-2 border-gold opacity-50" aria-hidden="true"></div>
          <div class="absolute -inset-6 border border-gold/30" aria-hidden="true"></div>
          <!-- Photo container with sepia treatment -->
          <div class="relative w-40 h-40 md:w-48 md:h-48 overflow-hidden vintage-photo">
            <img
              src="/gene-sigalov.jpg"
              alt="Gene Sigalov - Entrepreneur, Attorney, and Technologist from Fort Lauderdale, Florida"
              class="w-full h-full object-cover"
              loading="eager"
            />
          </div>
        </div>
      </div>

      <div class="mb-6 hero-element" data-delay="0.1">
        <span class="vintage-badge">
          Fort Lauderdale, Florida
        </span>
      </div>

      <!-- Art Deco divider -->
      <div class="section-divider mb-6 hero-element" data-delay="0.15">
        <div class="ornament"></div>
      </div>

      <!-- Name with vintage typography -->
      <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold tracking-tight mb-6 hero-element overflow-hidden pb-2 font-display" data-delay="0.2">
        <span class="gradient-text inline-block name-reveal">Gene Sigalov</span>
      </h1>

      <!-- Tagline with vintage styling -->
      <p class="text-xl md:text-2xl lg:text-3xl text-navy dark:text-cream mb-4 max-w-2xl mx-auto hero-element font-display italic" data-delay="0.3">
        Building technology that works for small businesses
      </p>
      <p class="text-base md:text-lg text-gold mb-10 max-w-xl mx-auto hero-element uppercase tracking-[0.3em] font-display" data-delay="0.35">
        Entrepreneur · Attorney · Technologist
      </p>

      <div class="flex flex-col sm:flex-row flex-wrap gap-4 md:gap-5 justify-center hero-element" data-delay="0.4">
        <a href="#ventures" class="btn-primary group w-full sm:w-auto justify-center">
          <svg class="w-5 h-5 transition-transform group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <span>View Ventures</span>
        </a>
        <a href="https://linkedin.com/in/sigalov" target="_blank" rel="noopener noreferrer" class="btn-secondary group w-full sm:w-auto justify-center" aria-label="Connect on LinkedIn (opens in new tab)">
          <svg class="w-5 h-5 transition-transform group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          <span>LinkedIn</span>
        </a>
      </div>

      <!-- Social Proof with Art Deco styling -->
      <div class="mt-16 hero-element" data-delay="0.5">
        <div class="section-divider mb-6">
          <div class="ornament"></div>
        </div>
        <p class="text-sm text-antique-gold dark:text-gold mb-6 uppercase tracking-[0.2em] font-display">Trusted by teams at</p>
        <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12">
          <span class="text-navy dark:text-cream font-display text-lg tracking-wider">Starbucks</span>
          <span class="text-gold">&#9670;</span>
          <span class="text-navy dark:text-cream font-display text-lg tracking-wider">FedEx</span>
          <span class="text-gold">&#9670;</span>
          <span class="text-navy dark:text-cream font-display text-lg tracking-wider">DHL</span>
          <span class="text-gold">&#9670;</span>
          <span class="text-navy dark:text-cream font-display text-lg tracking-wider">Sinch</span>
        </div>
      </div>

    </div>
  </section>

  <!-- About Section - 1940s Vintage Style -->
  <section id="about" class="py-16 md:py-20 lg:py-24 relative overflow-hidden chevron-pattern" aria-label="About Gene Sigalov">
    <!-- Section background -->
    <div class="absolute inset-0 bg-cream/90 dark:bg-vintage-dark/90 backdrop-blur-sm"></div>
    <!-- Art Deco top border -->
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-gold to-transparent" aria-hidden="true"></div>

    <div class="max-w-6xl mx-auto px-6 lg:px-8 relative">
      <div class="section-divider mb-4 reveal-element">
        <div class="ornament"></div>
      </div>
      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-8 md:mb-12 text-center reveal-element text-navy dark:text-cream font-display">
        About <span class="gradient-text">Me</span>
      </h2>
      <div class="grid md:grid-cols-2 gap-8 lg:gap-12 items-center">
        <div class="space-y-4 sm:space-y-6 max-w-prose">
          <p class="text-base sm:text-lg text-vintage-text dark:text-cream/90 leading-8 reveal-element font-body" data-delay="0.1">
            Gene Sigalov co-founded SimpleTexting, a business SMS platform that grew to 17,000+ customers including Starbucks, DHL, and FedEx. He scaled the company to $20M ARR as CEO before its acquisition by Sinch in 2021.
          </p>
          <p class="text-base sm:text-lg text-vintage-text dark:text-cream/90 leading-8 reveal-element font-body" data-delay="0.2">
            Now he's building Upfirst.ai, an AI-powered answering service that helps small businesses never miss a call. With a background in computer science and law (B.S., J.D.), he's focused on creating technology that solves real problems for business owners.
          </p>
        </div>

        <!-- Bento Grid Stats with Art Deco styling -->
        <div class="grid grid-cols-2 gap-5 sm:gap-6 bento-grid">
          <div class="card text-center reveal-element stat-card group" data-delay="0.1" role="figure" aria-label="17,000 plus customers">
            <div class="text-3xl sm:text-4xl lg:text-5xl font-bold text-navy dark:text-cream mb-3 tracking-tight tabular-nums font-display">
              <span class="counter" data-target="17000" data-suffix="+">0</span>
            </div>
            <div class="text-sm sm:text-base font-medium text-antique-gold dark:text-gold uppercase tracking-wider font-display">Customers</div>
          </div>
          <div class="card text-center reveal-element stat-card group" data-delay="0.2" role="figure" aria-label="20 million dollars ARR at exit">
            <div class="text-3xl sm:text-4xl lg:text-5xl font-bold text-navy dark:text-cream mb-3 tracking-tight tabular-nums font-display">
              $<span class="counter" data-target="20" data-suffix="M">0</span>
            </div>
            <div class="text-sm sm:text-base font-medium text-antique-gold dark:text-gold uppercase tracking-wider font-display">ARR at Exit</div>
          </div>
          <div class="card text-center reveal-element stat-card group" data-delay="0.3" role="figure" aria-label="2 companies built">
            <div class="text-3xl sm:text-4xl lg:text-5xl font-bold text-navy dark:text-cream mb-3 tracking-tight tabular-nums font-display">
              <span class="counter" data-target="2" data-suffix="">0</span>
            </div>
            <div class="text-sm sm:text-base font-medium text-antique-gold dark:text-gold uppercase tracking-wider font-display">Companies Built</div>
          </div>
          <div class="card text-center reveal-element stat-card group" data-delay="0.4" role="figure" aria-label="1 successful exit">
            <div class="text-3xl sm:text-4xl lg:text-5xl font-bold text-navy dark:text-cream mb-3 tracking-tight tabular-nums font-display">
              <span class="counter" data-target="1" data-suffix="">0</span>
            </div>
            <div class="text-sm sm:text-base font-medium text-antique-gold dark:text-gold uppercase tracking-wider font-display">Successful Exit</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Ventures Section - 1940s Vintage Style -->
  <section id="ventures" class="py-16 md:py-20 lg:py-24 relative overflow-hidden" aria-label="Business ventures">
    <!-- Section background -->
    <div class="absolute inset-0 bg-aged-paper/90 dark:bg-vintage-dark/90 backdrop-blur-sm"></div>

    <div class="max-w-6xl mx-auto px-6 lg:px-8 relative">
      <div class="section-divider mb-4 reveal-element">
        <div class="ornament"></div>
      </div>
      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-4 text-center reveal-element text-navy dark:text-cream font-display">
        <span class="gradient-text">Ventures</span>
      </h2>
      <p class="text-vintage-text dark:text-cream/80 text-center mb-8 md:mb-12 max-w-2xl mx-auto reveal-element leading-relaxed font-body italic" data-delay="0.1">
        Building technology that actually works for small businesses
      </p>

      <div class="space-y-8">
        <!-- Upfirst -->
        <article class="card group hover:scale-[1.01] hover:-translate-y-1 transition-all duration-500 reveal-element venture-card" data-delay="0.2">
          <div class="flex flex-col md:flex-row md:items-start gap-5 md:gap-8">
            <div class="flex-shrink-0">
              <div class="w-16 h-16 bg-navy border-2 border-gold flex items-center justify-center text-2xl font-bold text-gold font-display" aria-hidden="true">
                U
              </div>
            </div>
            <div class="flex-grow">
              <div class="flex flex-wrap items-center gap-3 mb-3">
                <h3 class="text-xl md:text-2xl font-bold tracking-tight text-navy dark:text-cream font-display">Upfirst.ai</h3>
                <span class="vintage-badge text-xs bg-sage/20 border-sage text-sage dark:text-sage">Current</span>
                <span class="vintage-badge text-xs">Co-founder & CEO</span>
              </div>
              <p class="text-vintage-text dark:text-cream/80 mb-4 leading-relaxed font-body">
                AI-powered voice receptionist for small businesses. Answers calls 24/7 with human-like AI voices, takes messages, answers FAQs, and books appointments. Born from the frustration of missing client calls while running a law practice.
              </p>
              <a href="https://upfirst.ai" target="_blank" rel="noopener noreferrer" class="text-gold hover:text-brass inline-flex items-center gap-2 py-2 group/link font-display uppercase tracking-wider text-sm min-h-[44px]">
                <span>Visit upfirst.ai</span>
                <svg class="w-4 h-4 transition-all duration-300 group-hover/link:translate-x-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
            </div>
          </div>
        </article>

        <!-- SimpleTexting -->
        <article class="card group hover:scale-[1.01] hover:-translate-y-1 transition-all duration-500 reveal-element venture-card" data-delay="0.3">
          <div class="flex flex-col md:flex-row md:items-start gap-5 md:gap-8">
            <div class="flex-shrink-0">
              <div class="w-16 h-16 bg-navy border-2 border-gold flex items-center justify-center text-2xl font-bold text-gold font-display" aria-hidden="true">
                ST
              </div>
            </div>
            <div class="flex-grow">
              <div class="flex flex-wrap items-center gap-3 mb-3">
                <h3 class="text-xl md:text-2xl font-bold tracking-tight text-navy dark:text-cream font-display">SimpleTexting</h3>
                <span class="vintage-badge text-xs bg-burgundy/20 border-burgundy text-burgundy dark:text-burgundy">Acquired by Sinch (2021)</span>
                <span class="vintage-badge text-xs">Co-founder & CEO</span>
              </div>
              <p class="text-vintage-text dark:text-cream/80 mb-4 leading-relaxed font-body">
                Business texting platform that grew to 17,000+ users including Fortune 500 companies like Starbucks, DHL, and FedEx. Scaled to $20M in annualized revenue as CEO before being acquired by Sinch in 2021.
              </p>
              <a href="https://simpletexting.com" target="_blank" rel="noopener noreferrer" class="text-gold hover:text-brass inline-flex items-center gap-2 py-2 group/link font-display uppercase tracking-wider text-sm min-h-[44px]">
                <span>Visit simpletexting.com</span>
                <svg class="w-4 h-4 transition-all duration-300 group-hover/link:translate-x-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
            </div>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- Legal Section - 1940s Vintage Style -->
  <section id="legal" class="py-16 md:py-20 lg:py-24 relative" aria-label="Legal practice">
    <!-- Section background -->
    <div class="absolute inset-0 bg-gradient-to-b from-cream to-aged-paper dark:from-vintage-dark dark:to-deep-navy backdrop-blur-sm"></div>

    <div class="max-w-6xl mx-auto px-6 lg:px-8 relative">
      <div class="section-divider mb-4 reveal-element">
        <div class="ornament"></div>
      </div>
      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-4 text-center reveal-element text-navy dark:text-cream font-display">
        Legal <span class="gradient-text">Practice</span>
      </h2>
      <p class="text-vintage-text dark:text-cream/80 text-center mb-8 md:mb-12 max-w-2xl mx-auto reveal-element leading-relaxed font-body italic" data-delay="0.1">
        Bridging technology and law with a unique dual expertise
      </p>

      <article class="card max-w-4xl mx-auto reveal-element legal-card" data-delay="0.2">
        <div class="flex flex-col md:flex-row md:items-start gap-6">
          <div class="flex-shrink-0">
            <div class="w-16 h-16 bg-navy border-2 border-gold flex items-center justify-center text-2xl font-bold text-gold font-display" aria-hidden="true">
              SF
            </div>
          </div>
          <div class="flex-grow">
            <h3 class="text-2xl font-bold mb-4 text-navy dark:text-cream font-display">The Sigalov Firm, PLLC</h3>
            <p class="text-vintage-text dark:text-cream/80 mb-6 font-body">
              Founded in 2009, The Sigalov Firm is a boutique law practice specializing in No-Fault insurance law for healthcare providers. The firm has resolved over 16,000 cases before the American Arbitration Association.
            </p>

            <div class="grid md:grid-cols-2 gap-6 mb-6">
              <div>
                <h4 class="font-semibold mb-3 text-navy dark:text-cream font-display uppercase tracking-wider text-sm">Bar Admissions</h4>
                <ul class="space-y-2 text-vintage-text dark:text-cream/80 font-body">
                  <li class="flex items-center gap-2 bar-item">
                    <span class="text-gold">&#10003;</span>
                    New York State Bar
                  </li>
                  <li class="flex items-center gap-2 bar-item">
                    <span class="text-gold">&#10003;</span>
                    New Jersey State Bar
                  </li>
                  <li class="flex items-center gap-2 bar-item">
                    <span class="text-gold">&#10003;</span>
                    Florida State Bar
                  </li>
                  <li class="flex items-center gap-2 bar-item">
                    <span class="text-gold">&#10003;</span>
                    USPTO (Patent Bar)
                  </li>
                </ul>
              </div>
              <div>
                <h4 class="font-semibold mb-3 text-navy dark:text-cream font-display uppercase tracking-wider text-sm">Recognition</h4>
                <ul class="space-y-2 text-vintage-text dark:text-cream/80 font-body">
                  <li class="flex items-center gap-2 recognition-item">
                    <span class="text-gold">&#9733;</span>
                    Super Lawyers Rising Stars (2015-2022)
                  </li>
                  <li class="flex items-center gap-2 recognition-item">
                    <span class="text-gold">&#9733;</span>
                    Top-rated Insurance Coverage Attorney
                  </li>
                </ul>
              </div>
            </div>

            <a href="https://sigalovfirm.com" target="_blank" rel="noopener noreferrer" class="text-gold hover:text-brass inline-flex items-center gap-2 group font-display uppercase tracking-wider text-sm">
              <span>Visit sigalovfirm.com</span>
              <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
